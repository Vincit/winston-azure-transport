{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*" : ["@types/*"] },
    "outDir": "lib",
    "declaration": true,
    "module": "commonjs",
    "target": "esnext",
    "downlevelIteration": true,
    "lib": ["dom", "es2017", "es2017.string"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "dist"
  ],
  "include": [
    "src",
    "@types"
  ]
}
